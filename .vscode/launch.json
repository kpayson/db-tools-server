    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        },

        {
            "type": "pwa-node",
            "request": "attach",
            "smartStep": true,
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "skipFiles": ["<node_internals>/**"]
          },

        {
            "type": "node",
            "request": "launch",
            "name": "Debug dbTools Server",
            "program": "${workspaceFolder}/src/main.ts",
            "outFiles": [
              "${workspaceFolder}/**/*.js"
            ],
            "preLaunchTask": "npm: build",
            "sourceMaps": true,
            "smartStep": true,
            "trace": true,

          },

          {
            "name": "Debug Sequelize Migration",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/sequelize",
            "args": [
              "db:migrate",
              "--debug"
            ]
          }
    ]
}